{
  "name": "@codacy/api-typescript",
  "version": "0.0.1",
  "description": "Codacy API client for Typescript",
  "homepage": "https://github.com/codacy/codacy-api-typescript#readme",
  "bugs": {
    "url": "https://github.com/codacy/codacy-api-typescript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codacy/codacy-api-typescript.git"
  },
  "license": "MIT",
  "author": "Codacy",
  "sideEffects": false,
  "module": "./lib/client.js",
  "types": "./lib/client.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "check-types:watch": "npm run check-types -- --watch",
    "fetch-api": "curl https://dl.bintray.com/codacy/Binaries/$npm_package_apiVersion/swagger.yaml -o api-swagger.yaml",
    "generate": "autorest --typescript --model-date-time-as-string=true --input-file=./api-swagger-patched.yaml --output-folder=./",
    "lint-md": "remark .",
    "patch-api": "python3 patch-api-definition.py api-swagger.yaml api-swagger-patched.yaml",
    "prepare": "npm run fetch-api && npm run patch-api && npm run generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "remark",
      "git add"
    ],
    "package.json": [
      "sort-package-json"
    ],
    "src/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "dependencies": {
    "@azure/ms-rest-js": "^2.0.4",
    "sort-package-json": "^1.39.1",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.3",
    "@types/babel__template": "^7.0.2",
    "autorest": "^3.0.6187",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.2",
    "remark-cli": "^8.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "typescript": "^3.7.5"
  },
  "apiVersion": "10.8.0"
}
